@page "/pessoa-juridica"
@rendermode InteractiveServer
@inject PessoaJuridicaApiService PessoaJuridicaService
@inject NavigationManager Nav
@using panContas.Front.Models
@using panContas.Front.Services

<PageTitle>Pessoas Jurídicas</PageTitle>

<div class="pf-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="pf-title"><i class="bi bi-buildings-fill me-2"></i>Pessoas Jurídicas</h1>
        <p class="text-muted mb-0">Gerenciamento de cadastro de pessoas jurídicas</p>
    </div>
    <a href="/pessoa-juridica/novo" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle me-1"></i> Nova Empresa
    </a>
</div>

@if (carregando)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
        <p class="mt-2 text-muted">Carregando registros...</p>
    </div>
}
else if (!string.IsNullOrEmpty(erro))
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @erro
    </div>
}
else if (pessoas.Count == 0)
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <p class="mt-3 text-muted fs-5">Nenhuma pessoa jurídica cadastrada.</p>
        <a href="/pessoa-juridica/novo" class="btn btn-outline-primary mt-2">
            <i class="bi bi-plus-circle me-1"></i> Cadastrar agora
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nome / Razão Social</th>
                    <th>CNPJ</th>
                    <th>Abertura</th>
                    <th>Telefone</th>
                    <th>Cidade/UF</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in pessoas)
                {
                    <tr>
                        <td><strong>@p.Nome</strong></td>
                        <td>@p.Cnpj</td>
                        <td>@p.DataNascimento.ToString("dd/MM/yyyy")</td>
                        <td>@p.Telefone</td>
                        <td>
                            @if (p.Endereco != null && !string.IsNullOrEmpty(p.Endereco.Localidade))
                            {
                                <span class="badge bg-secondary">@p.Endereco.Localidade / @p.Endereco.UF</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-center">
                            <a href="/pessoa-juridica/editar/@p.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <button class="btn btn-sm btn-outline-danger" title="Excluir"
                                    @onclick="() => ConfirmarExclusao(p)">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (pessoaParaExcluir != null)
{
    <div class="modal-backdrop fade show" style="display: block;" @onclick="CancelarExclusao"></div>
    <div class="modal fade show" tabindex="-1" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Confirmar Exclusão</h5>
                    <button type="button" class="btn-close btn-close-white" aria-label="Close" @onclick="CancelarExclusao"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-1">Tem certeza que deseja excluir <strong>@pessoaParaExcluir.Nome</strong>?</p>
                    <p class="text-muted small mb-0">Esta ação não pode ser desfeita.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarExclusao">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="ExecutarExclusao">
                        <i class="bi bi-trash me-1"></i> Excluir
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<PessoaJuridicaModel> pessoas = new();
    private bool carregando = true;
    private string? erro;
    private PessoaJuridicaModel? pessoaParaExcluir;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        try
        {
            carregando = true;
            erro = null;
            pessoas = await PessoaJuridicaService.ObterTodosAsync();
        }
        catch (Exception ex)
        {
            erro = $"Erro ao carregar os dados: {ex.Message}";
        }
        finally
        {
            carregando = false;
        }
    }

    private void ConfirmarExclusao(PessoaJuridicaModel pessoa)
    {
        pessoaParaExcluir = pessoa;
    }

    private void CancelarExclusao()
    {
        pessoaParaExcluir = null;
    }

    private async Task ExecutarExclusao()
    {
        if (pessoaParaExcluir == null) return;
        try
        {
            await PessoaJuridicaService.DeletarAsync(pessoaParaExcluir.Id);
            pessoaParaExcluir = null;
            await CarregarDados();
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir: {ex.Message}";
            pessoaParaExcluir = null;
        }
    }
}
